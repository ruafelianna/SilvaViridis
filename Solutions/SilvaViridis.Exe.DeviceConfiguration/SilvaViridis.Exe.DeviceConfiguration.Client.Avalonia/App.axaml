<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SilvaViridis.Exe.DeviceConfiguration.Client.Avalonia.App"
             xmlns:local="using:SilvaViridis.Exe.DeviceConfiguration.Client.Avalonia"
             xmlns:menu="using:SilvaViridis.Components.Menu.Avalonia"
             xmlns:dh="using:DialogHostAvalonia">
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://SilvaViridis.Components.Avalonia/Resources/SimpleExpander.axaml"/>
        <ResourceInclude Source="avares://SilvaViridis.Components.Menu.Avalonia/Resources.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

  <Application.Styles>
    <FluentTheme />

    <dh:DialogHostStyles />

    <StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml"/>

    <StyleInclude Source="avares://SilvaViridis.Components.Avalonia/Styles/SimpleExpander.axaml"/>
    <StyleInclude Source="avares://SilvaViridis.Components.Menu.Avalonia/Styles.axaml"/>

    <StyleInclude Source="/Styles/Main.axaml"/>
  </Application.Styles>
</Application>
