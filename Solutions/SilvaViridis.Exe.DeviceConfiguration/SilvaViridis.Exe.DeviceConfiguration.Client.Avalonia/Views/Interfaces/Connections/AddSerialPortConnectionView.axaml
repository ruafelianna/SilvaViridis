<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="abs:IAddSerialPortConnectionViewModel"
             x:Class="SilvaViridis.Exe.DeviceConfiguration.Client.Avalonia.Views.Interfaces.Connections.AddSerialPortConnectionView"
             xmlns:tr="using:SilvaViridis.Exe.DeviceConfiguration.Client.Assets.Translations"
             xmlns:abs="using:SilvaViridis.Exe.DeviceConfiguration.Client.ViewModels.Interfaces.Connections.Abstractions"
             xmlns:ic="using:FluentIcons.Avalonia">
  <Grid ColumnDefinitions="Auto,Auto,Auto"
        RowDefinitions="Auto"
        Classes="form-content">
    <TextBlock Text="{Binding Path=Value,
                      Source={x:Static tr:Strings.AddConnection_Port}}"
               Grid.Column="0"
               Grid.Row="0"
               Classes="form-label"/>
    <ComboBox SelectedItem="{Binding SelectedPort}"
              ItemsSource="{Binding AvailablePorts}"
              Grid.Column="1"
              Grid.Row="0"
              Classes="form-control">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Name}" />
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>
    <Button Command="{Binding RefreshPorts}"
            Classes="form-additional-btn"
            Grid.Column="2"
            Grid.Row="0">
      <ic:SymbolIcon Symbol="ArrowSync"
                     IconVariant="Regular"/>
    </Button>
  </Grid>
</UserControl>
